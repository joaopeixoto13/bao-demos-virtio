+    // update the IRQ number index
+    int irq_idx = CALCULATE_IRQ_IDX(irq);
+
+    // check if the IRQ number is the same as the device IRQ
+    if (device_irq[irq_idx] == irq && value)
+        qatomic_set(&irq_pending[irq_idx], value);
